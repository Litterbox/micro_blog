<div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6 col-md-offset-1 col-md-4 user-preview cust-con">
  <div class="crop">
    <img src="<%= user.image_url %>" class="img-responsive img">
  </div>
  <div>
    <h3><%= link_to user.first_name + " " + user.last_name, user_path(user.id) %></h3>
    <%= button_to "Edit", edit_user_path(user.id), method: :get, class: "btn btn-primary" %>
    <%= button_to "DELETE", user_path(user.id), method: :delete, class: "btn btn-danger" %>
  </div>
</div>
