<div class="row">

  <%= form_for user, html: {class: "col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8"} do |f| %>
    <div class="form-group">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div> 
    <div class="form-group">
      <%= f.text_field :email_confirmation, class: "form-control", placeholder: "Confirm Email" %>
    </div>
    <div class="form-group">
      <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
    </div>
    <div class="form-group">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name"%>
    </div>
     <div class="form-group">
      <%= f.text_field :image_url, class: "form-control", placeholder: "Image Link"%>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary btn-cust" %>
    </div>
  <% end %>
</div>
